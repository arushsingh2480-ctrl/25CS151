{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-run-clean",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "g++ \"${file}\" -o temp && ./temp && rm temp"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ]
    }
  ]
}